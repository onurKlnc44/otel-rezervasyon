    @using projeodev.Models
    @using projeodev.ViewModels
    @model Resimler
    <!-- Booking Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">@Model.oda.Odaismi</h6>
                <h1 class="mb-5"><span class="text-primary text-uppercase">@Model.detay.Acıklama</span></h1>
            </div>
            <div class="row g-5">
                <div class="col-lg-6">
                
          
                
                        <div class="row g-3">

                            <div class="col-6 text-end">
                                <h1>@ViewBag.OdaIsmi</h1>
                                <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="@Model.Resimyolu" style="margin-top: 25%;">
                            </div>
                        </div>
                
                 
                
                </div>

                <div class="col-lg-6">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <form action="/Detay/RezervasyonYap" method="post">
                            <div class="row g-3">
                          

                                <h1>@Model.detay.Günlükfiyat $</h1>
                                <h1>@Model.detay.Yıldız  Yıldız</h1>
                                <h1>@Model.oda.Odano   Numaralı Oda</h1>
                                <div class="col-md-6">
                                    <div class="form-floating date" id="date3" data-target-input="nearest">
                                        <input type="date" name="rezervasyonBaslangic" class="form-control datetimepicker-input" placeholder="Check In" data-target="#date3" data-toggle="datetimepicker" />
                                        <label for="checkin">Check In</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating date" id="date4" data-target-input="nearest">
                                        <input type="date" name="rezervasyonBitis" class="form-control datetimepicker-input"  placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                                        <label for="checkout">Check Out</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                             <input type="hidden" name="resimlerID" value="@Model.ID"/>
                            
                           
                           
                            
                                    <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yaptır</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->